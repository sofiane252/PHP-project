{% extends 'base.html.twig' %}

{% block title %}Nouvel événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Créer un nouvel événement</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre) }}
                {{ form_errors(form.titre) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.date) }}
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.heure) }}
                {{ form_widget(form.heure) }}
                {{ form_errors(form.heure) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.nbrMaxParticipants) }}
                {{ form_widget(form.nbrMaxParticipants) }}
                {{ form_errors(form.nbrMaxParticipants) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.publique) }}
                {{ form_widget(form.publique) }}
                {{ form_errors(form.publique) }}
            </div>
            <div class="mt-3">
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}